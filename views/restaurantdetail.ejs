<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title></title>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <nav class="nav">
    <ul>
      <li><a class="home" href="/">Home</a></li>
      <!-- <li><a href="#">Events</a></li> -->
      <li><a href="/restaurant">Restaurants</a></li>
      <li><a href="/#map">Map</a></li>
    </ul>
  </nav>
  <section class=information>
    <section class="leftInfo">
      <h1><%= restaurant.Name %></h1>
      <p><%= restaurant.Address %></p>
      <p><%= restaurant.Hours %></p>
      <a href="<%= restaurant.Menu %>">Menu</a>
      <p><%= restaurant.ShortDescription %></p>
    </section>
    <section class="rightInfo">
      <section id="map">

      </section>
    </section>
  </section>

  <section class="restGallery">
    <h1 class="topDishes">Top Dishes</h1>
    <section class="detailPics">
      <img class="detailImg" src="img/<%= restaurant.images[0] %>" alt="">
    </section>
    <section class="detailPics">
      <img class="detailImg" src="img/<%= restaurant.images[1] %>" alt="">
    </section>
    <section class="detailPics">
      <img class="detailImg" src="img/<%= restaurant.images[2] %>" alt="">
    </section>
  </section>
  <section class="review">
    <h2>Add a Review</h2>
    <form id="red" action="/detail1" method="POST">
      <input type="text" placeholder="Name"  name="name"> <br>
      <input type="hidden" name="RestId" value="<%= restaurant.RestId %>">
      <textarea name="review" form="red" rows="8" cols="80" placeholder="Add your review"></textarea>
      <!--adding a RestId so that each message can be seperated depending on the restaurant  -->
      <!-- input type hides it from the client side but each time a form is posted the rest id will be posted -->
      <button type="submit">Submit</button>
    </form>
    <% for(var i=0; i<piper.length; i++) {%>
        <!-- <making a loop through all of the comments > -->
          <ul>
            <li class="feedback"><span><%= piper[i].name %></span><br></li>
          <li class="feedback"><span><%= piper[i].review %></span><br></li>
        </ul>
        <!-- </section> -->
      <% } %>
  </section>




</body>
<script src="main.js" type="text/javascript"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBpTgU4d3c7LxDDG92UK5zuwE9YfA4GF04&libraries=places&callback=initMap"async defer></script>
</html>
