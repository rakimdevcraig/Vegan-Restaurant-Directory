<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="style1.css">
    <link rel="stylesheet" href="style321.css">
    <link rel="stylesheet" href="colors/main.css" id="colors">

  </head>
  <body>
    <nav class="nav">
      <ul>
      <li><a class="home" href="#">Home</a></li>
      <li><a href="#">Events</a></li>
      <li><a href="/restaurant">Restaurants</a></li>
      <li><a href="#map">map</a></li>
    </ul>
    </nav>
    <section class="display">
      <h3>Restaurants</h3>
      <form class="" action="/restaurant" method="GET">
      <input class="input" type="text" name="search" placeholder="Search.......">
      <input id ="searchtxt" type="submit" value="Search">
      <select class="" name="distance" onchange="this.form.submit()">
        <option value="">All Restaurants</option>
        <option value="1">1 mile</option>
        <option value="2">2 miles</option>
        <option value="3">3 miles</option>
        <option value="4">4 miles</option>
        <option value="5">5 miles</option>
      </select>
    </form>


      <ul class="restaurants">
        <!--goes through the entire restaurants collection  -->
        <% for(var i=0; i<restaurants.length; i++) {%>
          <li class="item">
            <!--finds all of the properties that i've specified and renders them -->
            <!-- <span><%= restaurants[i].Name %></span>
            <span><%= restaurants[i].PhoneNumber %></span>
            <span><%= restaurants[i].Address %></span>
            <span><%= restaurants[i].City %></span>
            <span><%= restaurants[i].ShortDescription %></span>
            <a href="<%= restaurants[i].Menu %>">menu</a>
            <span><%= restaurants[i].location.coordinates %></span> -->
              <!--using dot notation to get an object's properties that's within an object  -->
        </li>
        <div class="col-lg-12 col-md-12">
          <div class="listing-item-container list-layout">
            <a href="listings-single-page.html" class="listing-item">

              <!-- Image -->
              <div class="listing-item-image">
                <img src="images/listing-item-01.jpg" alt="">
                <span class="tag">Eat & Drink</span>
              </div>

              <!-- Content -->
              <div class="listing-item-content">
                <div class="listing-item-inner">
                  <h3><%= restaurants[i].Name %></h3>
                  <span><%= restaurants[i].Address %></span>
                  <div class="star-rating" data-rating="3.5">
                  </div>
                </div>

              </div>
            </a>
          </div>
        </div>
        <% } %>
      </ul>
    </section>

    <section class="restaurantInfo">

    </section>


    <script src="main.js" type="text/javascript"></script>
  </body>
</html>
